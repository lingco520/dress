<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daqsoft.mapper.client.information.DutypersonnelMapper">

    <!-- 景区值班人员 时间为now（）-->
    <select id="getDutypersonnel"  resultType="java.util.Map">
		SELECT name,phone FROM sys_dutypersonnel WHERE ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
             #{item}
        </foreach>
    </select>
    <select id="getDutyPersonId" parameterType="String" resultType="String">
        <![CDATA[
            SELECT t.person FROM jq_duty t WHERE t.vcode = #{vcode} AND  date_format(t.DUTYTIME,'%y-%m-%d') = date_format(now(),'%y-%m-%d')
        ]]>
    </select>
</mapper>